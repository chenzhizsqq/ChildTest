<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="基本设定">

        <ListPreference
            app:defaultValue=""
            app:entries="@array/chinese_entries"
            app:entryValues="@array/chinese_values"
            app:key="chineseSpeak"
            app:dialogTitle="设定中文发音的发音"
            app:title="中文发音"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <CheckBoxPreference
        app:key="clicked_read"
        app:title="点击后，马上读"
        app:defaultValue="false"/>

    <CheckBoxPreference
        app:key="random_select"
        app:title="随机显示"
        app:defaultValue="true"/>

    <CheckBoxPreference
        app:key="welcome_password"
        app:title="打开软件，需要手机认证"
        app:defaultValue="false"/>


</PreferenceScreen>